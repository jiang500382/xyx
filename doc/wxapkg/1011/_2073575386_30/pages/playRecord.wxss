@import "../__wuBaseWxss__/3.wxss";

@import "../__wuBaseWxss__/2.wxss";

page {
    padding-top: 130rpx;
    background: #faf7ff;
}

.body {
    position: relative;
    padding: 0 20rpx;
}

.body[data-length="1"]::before {
    position: absolute;
    display: block;
    left: 0;
    width: 100%;
    height: 52rpx;
    background: #a171eb;
    content: '';
    z-index: -1;
}

.recordItem {
    position: relative;
    padding: 30rpx 40rpx;
    margin-bottom: 20rpx;
    border-radius: 15rpx;
    background: #fff;
    box-shadow: 0 5rpx 10rpx rgba(159,107,240,0.1);
}

.recordItem::before,.recordItem::after {
    position: absolute;
    width: 16rpx;
    height: 70rpx;
    bottom: -45rpx;
    background: url('https://res.xingqiu123.com/img/xcx/Hall/3.5/record/chain.png') no-repeat;
    background-size: 100%;
    z-index: 3;
    content: '';
}

.recordItem::before {
    left: 15rpx;
}

.recordItem::after {
    right: 15rpx;
}

.recordItem:last-child::before,.recordItem:last-child::after {
    display: none;
}

.h2 {
    color: #a172eb;
    font-weight: bold;
    font-size: 34rpx;
}

.h2::after {
    display: inline-block;
    width: 40rpx;
    height: 48rpx;
    margin-left: 10rpx;
    background: url('https://res.xingqiu123.com/img/xcx/Hall/3.5/record/result.png') no-repeat;
    background-size: 300%;
    vertical-align: top;
    content: '';
}

.h2[data-type='-1']::after {
    background-position-x: -40rpx;
}

.h2[data-type='0']::after {
    background-position-x: 0;
}

.h2[data-type='1']::after {
    background-position-x: -80rpx;
}

.userData {
    margin: 20rpx 0 0;
}

.userItem {
    display: inline-block;
}

.other::before {
    display: inline-block;
    margin-top: 10rpx;
    margin-right: 20rpx;
    color: #f0d5ff;
    font-size: 40rpx;
    font-style: italic;
    font-weight: bolder;
    text-shadow: 5rpx 2rpx 0 #a171eb;
    letter-spacing: 4rpx;
    vertical-align: top;
    content: 'VS';
}

.userD {
    display: inline-block;
}

.portrait {
    width: 80rpx;
    height: 80rpx;
    border-radius: 10rpx;
}

.userNick {
    display: block;
    width: 80rpx;
    font-size: 20rpx;
    text-align: center;
}

.recordT {
    position: absolute;
    width: 82rpx;
    height: 104rpx;
    top: 0;
    right: 40rpx;
    padding-top: 15rpx;
    background: url('https://res.xingqiu123.com/img/xcx/Hall/3.5/record/tip.png') no-repeat;
    background-size: 100%;
    color: #fff;
    text-align: center;
    font-size: 26rpx;
    font-weight: bold;
}

.no_list {
    margin: 30vh auto;
    width: 369rpx;
    height: 297rpx;
}

.no_list image {
    width: 100%;
    height: 100%;
}